[user]
	name = Yifan Zhang
	email = freqyifan@gmail.com
[core]
  editor = vim
  whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
	excludesfile = ~/.gitignore

[color]
	ui = true

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = yellow
  changed = green
  untracked = red

[diff]
  tool = sourcetree

[url "https://github.com"]
  insteadOf = gh:

[url "https://bitbucket.org/"]
    insteadOf = bb:

[credential]
  helper = osxkeychain

[alias]
  ci = commit
  co = checkout
  upstream = pull --rebase upstream master
  subup = submodule update --init
  ll = log --oneline --decorate=full --date=relative --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
  l = log --oneline --graph
  s = status -s -uno
  st = status --short --branch
  undo = reset --soft HEAD^
	pusht = push --tags origin HEAD

[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
[format]
	pretty = oneline
[push]
	default = matching
[merge]
  ff = only
[difftool]
  prompt = false
[difftool "icdiff"]
  cmd = /usr/local/bin/icdiff --line-numbers $LOCAL $REMOTE
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
